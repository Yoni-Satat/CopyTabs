{
    "name": "Copy Tabs",
    "description": "Copy URLs and Headers from open tabs",
    "version": "1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_icon": {
            "16": "images/web-browser16.png",
            "32": "images/web-browser32.png",
            "128": "images/web-browser128.png"
        },
        "default_title": "Copy Tabs",
        "default_popup": "popup.html"
    },
    "options_page": "options.html"
}